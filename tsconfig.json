{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./@types"],
    "target": "es2016",                                 
    "module": "commonjs", 
    "moduleResolution": "node",                              
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./dist"                                
  }
}